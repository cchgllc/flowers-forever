# Copy this file to .env and fill in your values.
# Never commit .env to version control.

# Recurly API credentials
# Found in Recurly Admin Console → Integrations → API Credentials
RECURLY_PRIVATE_API_KEY=your-private-api-key-here
RECURLY_PUBLIC_KEY=ewr1-your-public-key-here

# Recurly webhook signing secret
# Found in Recurly Admin Console → Integrations → Webhooks → Push Notifications
RECURLY_WEBHOOK_SECRET=your-webhook-secret-here

# Flask settings
FLASK_SECRET_KEY=change-this-to-a-long-random-string
FLASK_ENV=development

# Frontend URL (for CORS — set to your domain in production)
FRONTEND_URL=http://localhost:5500

# Email settings (optional — for sending confirmation emails)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=hello@flowersforever.com
# SMTP_PASSWORD=your-smtp-password
# FROM_EMAIL=hello@flowersforever.com
# FROM_NAME=Flowers Forever
